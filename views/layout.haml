!!!
%html
  %head
    %title= @title
    %link{:href => '/bootstrap/css/bootstrap.min.css', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/css/main.css', :rel => 'stylesheet', :type => 'text/css'}
    %script{:src => '/js/jquery-1.11.0.min.js', :type => 'text/javascript'}
    %script{:src => '/js/scripts.js', :type => 'text/javascript'}
  %body

    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %a.navbar-brand{:href => "/"} Sinatra App
          / = render_login_logout
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => "/"} Home
            -if logged_in?
              %li
                %a{:href => "/admin/articles"} Admin Articles
            -else
              %li
                %a{:href => "/articles"} Articles
            %li
              %a{:href => "/about"} About
          %ul.nav.navbar-nav.navbar-right
            -if logged_in?
              %li
                %a.navbar-brand{:href => "/users/#{current_user.id}"} Account (#{current_user.email})
              %li
                %a{:href => "/logout"} Logout
            -else
              %li
                %a{:href => "/signup"} Sign up
              %li
                %a{:href => "/login"} Login
    %div.container
      #errors.text-danger
        = flash[:notice]
        = flash[:error]
      #content= yield
      .footer
        %hr/
        %p
          Sinatra app by
          %a{:href => "mailto:someone@example.com", :target => "_top"}anithaly@gmail.com
          \&copy; 2014
